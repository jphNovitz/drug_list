<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp">
    <title>{% block title %}Liste de médicaments !{% endblock %}</title>

    {% block stylesheets %}
        {# parent() #}
        {{ encore_entry_link_tags('back') }}
    {% endblock %}

    {% block javascripts %}
        {# parent() #}
        {{ encore_entry_script_tags('back') }}
    {% endblock %}
</head>
<body class="bg-tertiary-light">
<div class="container-fluid">
    <nav id="sidebar" class="bg-white text-primary">
        <div id="logo">
            <a href="#" id="sidebar-menu"> <i class="fi-rr-menu-burger"></i> </a>
            <span class="title text-primary">
                <span class="text-notice">
                    <i class="fi-rr-medicine"></i>
                </span>Ma liste de médicaments
            </span>
        </div>
        <ul class="menu-vertical">
            <li class="
            {% if app.request.attributes.get('_route') == 'admin_index'  %}active{% endif %}">
                <a href="{{ path('admin_index') }}">
                    <i class="material-icons-round">home</i> Accueil
                </a>
            </li>
            <li class=" {% if ( 'admin_product' in app.request.attributes.get('_route'  )) %} active {% endif %}">
                <a href="{{ path('admin_product_index') }}">
                    <i class="material-icons-round">inventory_2</i> Produits
                </a>
            </li>
            <li class=" {% if ( 'admin_frequency' in app.request.attributes.get('_route'  )) %} active {% endif %}">
                <a href="{{ path('admin_frequency_index') }}">
                    <i class="material-icons-round">timelapse</i> Fréquences
                </a>
            </li>
            <li class=" {% if ( 'admin_moment' in app.request.attributes.get('_route'  )) %} active {% endif %}">
                <a href="{{ path('admin_moment_index') }}">
                    <i class="material-icons-round">watch</i> Moment
                </a>
            </li>
            <li class=" {% if ( 'admin_dose' in app.request.attributes.get('_route'  )) %} active {% endif %}">
                <a href="{{ path('admin_dose_index') }}">
                    <i class="material-icons-round">water_drop</i> Dosage
                </a>
            </li>
            {#  <li class=" {% if (app.request.attributes.get('_route') == 'admin_product_index')
            or (app.request.attributes.get('_route') == 'admin_product_update') %}active{% endif %}">
                <a href="{{ path('admin_product_index') }}">
                    <i class="material-icons-round">inventory_2</i> Produits
                </a>
            </li> #}
        </ul>

        <img src="{{ asset('images/Wavy_Med-logo_bg.png') }}"/>

        <footer>
            <span>Dashboard / Admin interface</span>
            <span>  <i class="fi-rr-copyright"></i> 2021 <a href="https://jphnovitz.be/"> Jiffy.Codes</a></span>
        </footer>

    </nav>

    <div id="content" class="">
        <div id="content-logo">

            <a href="#" id="menu"> <i class="fi-rr-menu-burger"></i> </a>
            <span class="title text-primary">
                <span class="text-quaternary"> &amp; </span>Mes Médocs</span>
        </div>
        <header>
            <div>
                <h1>
                    {% block header_h1 %}
                        Hello You
                    {% endblock %}
                    {% block header_h1_icon %}
                        <i class="open-hand"></i>
                    {% endblock %}
                </h1>
                <h2>
                    {% block header_h2 %}
                        Ma liste de médicaments
                    {% endblock %}
                </h2>
            </div>

{#            <input type="search" id="site-search" name="q"#}
{#                   aria-label="Search through site content" placeholder=" ">#}
        </header>

        {% for message in app.flashes('notice') %}
            <div class="alert alert-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        {% block body %}
            <section>content</section>
        {% endblock %}
    </div>
</div>
</body>

</html>
