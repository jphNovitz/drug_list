<h2 class="title">
    Les médicament que je prends chaque jour {% block button_action %}  {% endblock %}
</h2>

<table style=" width: 100% ; border: 0 ; border-spacing : 0; border-collapse : collapse;" class="container">
    <thead>
    <tr style="background-color: #F0E8FF ; color: #5A46AA">
        <th style=" width: 40% ; text-align: left">Médicament</th>
        <th style=" width: 10% ; text-align: left">Combien</th>
        <th style=" width: 10% ; text-align: left">Jours</th>
        <th style=" width: 20% ; text-align: left">Combien de fois</th>
        <th style=" width: 20% ; text-align: left">Quand</th>
    </tr>
    </thead>
    <tbody>

    {% for item in list %}
        <tr>
            <th style=" width: 40% ; text-align: left">{{ item.product.name }} </th>
            <td style=" width: 10% ; text-align: left">{{ item.qty }}</td>
            <td style=" width: 10% ; text-align: left">{{ item.day }}</td>
            <td style=" width: 20% ; text-align: left">{{ item.dose.frequency.name }}</td>
            <td style=" width: 20% ; text-align: left">{{ item.dose.moment.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
