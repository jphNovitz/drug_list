{% extends 'base_security.html.twig' %}

{% block login_button %}
    {% if app.user %}Sign in
        {{ app.user.username }},
        <a href="{{ path('app_logout') }}" class="btn btn-basic">
            DÃ©conexion
        </a>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-basic">
            Conexion
        </a>
    {% endif %}
{% endblock %}
{% block title %}Register{% endblock %}
{% block body %}
    <div id="register">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal">Enregistrement</h1>

        {{ form_start(registrationForm) }}
        <div class="form-row">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email) }}
        </div>
        <div class="form-error">
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-row">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword) }}
        </div>

        <div class="form-error">
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <div class="form-row flow-reverse" style="align-items: baseline ; justify-content: flex-end">
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions') }}
            {{ form_widget(registrationForm.agreeTerms) }}
        </div>

        <div class="form-error">
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        <div class="form-row">
            <input type="submit" class="bg-primary" value="je m'inscris">
        </div>

        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
