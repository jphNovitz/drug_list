        <article class="horizontal-item bg-white auto-height margin-horizontal-2 radius-3">
            <div class="border-left-info jauge flow-column">
                {# <div> #}

                {{ form_start(url_form, {'attr': {
                    'class': 'wfull',
                    'id': 'emergency'
                }}) }}
                <span class="header">Mon url urgence</span>
                <div class="form-row">
                    <label for="url_url">
                        {{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}/g/
                        {{ form_widget(url_form.url, {
                            'value': app.user.url
                        }) }}
                    </label>
                </div>
                <div class="form-row flow-row">
                    <input type="submit" class="btn auto-min bg-primary text-white"
                           value="Modifier">
                    <input type="submit" id="faker_button" class="btn auto-max bg-primary-lighter text-primary" value="Générer un pseudo" >
                </div>
                {{ form_end(url_form) }}


            </div>
        </article>
        <article class="horizontal-item bg-white auto-height margin-horizontal-2 radius-3 w20pc not-mobile">
            <div class="border-left-primary jauge">
                <img src="{{ qr_code_url( app.request.schemeAndHttpHost ~ app.request.baseUrl ~ '/g/' ~ app.user.url) }}" class="qr" />
            </div>
        </article>
        <article class="horizontal-item bg-white auto-height margin-horizontal-2 radius-3">
            <div class="border-left-success jauge">

                {{ form_start(send_form, {'attr': {
                    'class': 'wfull',
                    'id': ''
                }}) }}
                <span class="header">Envoyer ma liste</span>
                <div class="form-row">
                    <label for="send_email">
                        {{ form_widget(send_form.email) }}
                    </label>
                </div>
                <div class="form-row">
                    <input type="submit" class="btn auto-min bg-success text-white"
                           value="Envoyer">
                </div>
                {{ form_end(url_form) }}

            </div>
        </article>

    </section>

    {% embed "_template-parts/_lines-list.html.twig" %}
        {% block button_action %}
            <a href="{{ path('admin_line_new') }}" class="bt bg-info text-info p06 radius-5p margin-horizontal-2 "> Ajouter</a>
        {% endblock %}
    {% endembed %}


