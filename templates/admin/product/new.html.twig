{% extends 'base_back.html.twig' %}

{% block title %}Nouveau médicament{% endblock %}

{% block header_h1 %} Produits {% endblock %}
{% block header_h1_icon %}
    <a href="{{ path('admin_product_index') }}"
       class="btn circle bg-primary-lighter border-primary inline"
       title="revenir à la liste des produits">

        <i class="material-icons">list</i>
    </a>
{% endblock %}
{% block body %}
    <section class="card wfull">
        <div class="card-header">
            <h3 class="title">{% block card_title %} Ajouter {% endblock %}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-row">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="form-row">
                {{ form_label(form.comment) }}
                {{ form_widget(form.comment) }}
            </div>
            <div class="form-row">
                {% block submit %} <input type="submit" class="btn auto-min bg-primary text-white"
                                          value="ajouter">{% endblock %}
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
