{% extends 'base_security.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>{% trans %}Reset your password{% endtrans %}</h1>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <div>
        <small>
            {% trans %}Enter your email address and we we will send you a link to reset your password{% endtrans %}
        </small>
    </div>

    <div class="form-row">
        <button class="btn bg-primary auto-max">{% trans %}Send password reset email{% endtrans %}</button>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
